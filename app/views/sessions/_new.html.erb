<h1>Login:</h1>

<% if @errors %>
    <% @errors.each do |error|%>
        <p>Error! <%= error%></p>
    <%end %>
<%end %>

<%= form_tag '/sessions' do |f| %>
<%= label_tag :username%>
<%= text_field_tag :username%><br>
<%= label_tag :password%>
<%= password_field_tag :password%><br>
<%= submit_tag "Login", method: :get%>
<% end %>